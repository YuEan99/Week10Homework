{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "data": {
      "url": "worldometer_data.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Australia/Oceania"
          ],
          "labels":[
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Australia/Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.ActiveCases > 0"},
      {"filter": "datum.TotalDeaths > 0"},
      {"filter": "datum.Population > Population_Above"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
      {
        "calculate": "datum.TotalCases/datum.Population * 10000",
        "as": "Cases per 10,000 Population"
      }
    ],
    "encoding": {
      "x": {
        "field": "TotalCases",
        "type": "quantitative",
        "title": "Total Confirmed Cases",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [1, 10000000]}
      },
      "y": {
        "field": "TotalDeaths",
        "type": "quantitative",
        "title": "Total Death Cases",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 1000000]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Australia/Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country/Region", "type": "nominal"},
            {"field": "TotalCases", "type": "quantitative", "format": ","},
            {"field": "ActiveCases", "type": "quantitative", "format": ","},
            {"field": "TotalDeaths", "type": "quantitative", "format": ","},
            {"field": "TotalRecovered", "type": "quantitative", "format": ","},
            {
              "field": "Deaths/1M pop",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country/Region", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country/Region'] == 'Malaysia' || datum['Country/Region'] == 'Russia' || datum['Country/Region'] == 'Singapore' || datum['Country/Region'] == 'Australia' || datum['Country/Region'] == 'New Zealand' || datum['Country/Region'] == 'Italy' || datum['Country/Region'] == 'Yemen' ||  datum['Country/Region'] == 'United States of America'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country/Region", "type": "nominal", "title":"Country"},
            {"field": "TotalCases", "type": "quantitative", "format": ","},
            {"field": "ActiveCases", "type": "quantitative", "format": ","},
            {"field": "TotalDeaths", "type": "quantitative", "format": ","},
            {"field": "TotalRecovered", "type": "quantitative", "format": ","},
            {
              "field": "Cases per 10,000 Population",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ]
  }